Bootstrap: docker
From: ubuntu

#
# Container for Singularity
# CellProfiler 3.0.0
# 
# Written by Maciej Dobrzynski 

%help
  This is a container with CellProfiler and required dependencies.

%label
  CellProfiler 3.0.0

%setup
  hostname -f > $SINGULARITY_ROOTFS/etc/build_host

%post
    apt-get update 
    apt-get -y upgrade
    apt-get -y install language-pack-en
    apt-get -y install \
    build-essential    \
    cython             \
    git                \
    libmysqlclient-dev \
    libhdf5-dev        \
    libxml2-dev        \
    libxslt1-dev       \
    openjdk-8-jdk      \
    python-dev         \
    python-pip         \
    python-h5py        \
    python-matplotlib  \
    python-mysqldb     \
    python-scipy       \
    python-numpy       \
    python-vigra       \
    python-wxgtk3.0    \
    python-zmq

  pip install --upgrade pip
 
  mkdir sw_install
  cd sw_install
 
  rm -rf CellProfiler
  git clone https://github.com/CellProfiler/CellProfiler.git
  cd CellProfiler
  git checkout v3.0.0
  pip install --editable .

%environment

%runscript
  /usr/local/bin/cellprofiler "$@"

%test
  test -f /etc/build_host